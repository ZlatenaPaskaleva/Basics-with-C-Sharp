int chickenMenu = int.Parse(Console.ReadLine());
int fishMenu = int.Parse(Console.ReadLine());
int veggiMenu = int.Parse(Console.ReadLine());

double chickenMenuPrice = 10.35;
double fishMenuPrice = 12.40;
double veggiMenuPrice = 8.15;

double deliveryPrice = 2.50;

double totalPriceWithoutSweets = (chickenMenu * chickenMenuPrice) + (fishMenu * fishMenuPrice) + (veggiMenu * veggiMenuPrice);

double priceSweets = totalPriceWithoutSweets * 0.20;

double total = totalPriceWithoutSweets + priceSweets + deliveryPrice;

Console.WriteLine(total);
